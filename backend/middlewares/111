server {

  server_name alexboga.projectback.nomoredomains.monster;


  location / {
          proxy_pass http://localhost:3000;
          proxy_http_version 1.1;
          proxy_set_header Upgrade $http_upgrade;
          proxy_set_header Connection 'upgrade';
          proxy_set_header Host $host;
          proxy_cache_bypass $http_upgrade;


  listen 443 ssl; # managed by Certbot
  ssl_certificate /etc/letsencrypt/live/alexboga.projectback.nomoredomains.monster/fullchain.pem; # managed by Certbot
  ssl_certificate_key /etc/letsencrypt/live/alexboga.projectback.nomoredomains.monster/privkey.pem; # managed by Certbot
  include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
  ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

 }
}

server {

  server_name alexboga.projectfront.nomoredomains.monster;

  root /home/sashako4etov/react-mesto-api-full-gha/frontend/build;


  location / {

      try_files $uri $uri/ /index.html;
    }


  listen 443 ssl; # managed by Certbot
  ssl_certificate /etc/letsencrypt/live/alexboga.projectback.nomoredomains.monster/fullchain.pem; # managed by Certbot
  ssl_certificate_key /etc/letsencrypt/live/alexboga.projectback.nomoredomains.monster/privkey.pem; # managed by Certbot
  include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
  ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}

server {
  if ($host = alexboga.projectback.nomoredomains.monster) {
      return 301 https://$host$request_uri;
  } # managed by Certbot


  listen 80;

  server_name alexboga.projectback.nomoredomains.monster;
  return 404; # managed by Certbot


}

